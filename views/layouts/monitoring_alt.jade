      function colorize(opaque, context) {
         var value = context.dataset.data[context.dataIndex];
         var x = value.x / 100;
         var y = value.y / 100;
         var r = x < 0 && y < 0 ? 250 : x < 0 ? 150 : y < 0 ? 50 : 0;
         var g = x < 0 && y < 0 ? 0 : x < 0 ? 50 : y < 0 ? 150 : 250;
         var b = x < 0 && y < 0 ? 0 : x > 0 && y > 0 ? 250 : 150;
         var a = opaque ? 1 : 0.5;
         
         return 'rgba(' + r + ',' + g + ',' + b + ',' + a + ')';
      }
      
      $(document).ready(function(){
        var updateBubbleChart = function(){                        
            $.ajax({
              url: '/monaweb/atmbubble',
              success: function(data){
                var bubbleData = {
                    label: [],
                    data: []
                };
                var bubbleDataset = [];
                i = 0;
                var curatmid = '';
                var xadj, yadj, totl;
                xadj = 0;
                yadj = xadj;
                totl = 0;
                
                data.rows.forEach( function(item){
                    if( item[0] != curatmid )
                    {
                        if( i > 0)
                        {
                            bubbleData.label.push(curatmid);
                            
                            xadjf = Math.floor((xadj/totl)*100)
                            yadjf = Math.floor((yadj/totl)*100)
                            
                            xadjf = xadjf > 100 ? 100 : xadjf
                            yadjf = yadjf > 100 ? 100 : yadjf
                            
                            bubbleData.data.push({
                                x: xadjf,
                                y: yadjf,
                                v: totl                                
                            });
                            
                            xadj = 0;
                            yadj = xadj;
                            totl = 0;
                            
                        }
                        curatmid = item[0];                        
                    }
                    if( item[1] == 'WDL' && item[2] == '00')
                    {
                        xadj += item[3];
                    }else
                    if( item[1] == 'WDL' && item[2] != '00')
                    {
                        xadj -= item[3];
                    }else
                    if( item[1] == 'TRF' && item[2] == '00')
                    {
                        yadj += item[3];
                    }else
                    if( item[1] == 'TRF' && item[2] != '00')
                    {
                        yadj -= item[3];    
                    }
                    totl += item[3];
                    i++;
                });
                

                var options = {
                    title: {
                        text: 'ATM Plot Trend',
                        display: true
                    },
                    aspectRatio: 1,
                    legend: false,
                    scales: {
                        xAxes: [{
                           scaleLabel : {
                            display : true,
                            labelString : 'Withdrawal'
                           },
                           ticks: {
                                min: -100,
                                max: 100
                           }
                        }],
                        yAxes: [{
                           scaleLabel : {
                            display : true,
                            labelString : 'Transfer & Overbooking'
                           },
                           ticks: {
                                min: -100,
                                max: 100
                           }
                        }]
                    },
                    elements: {
                        point: {
                            backgroundColor: colorize.bind(null, false),
                            borderColor: colorize.bind(null, true),
                            borderWidth: function(context) {
                                return Math.min(Math.max(1, context.datasetIndex + 1), 2);
                            },            
                            hoverBackgroundColor: 'transparent', 
                            radius: function(context) {
                                var value = context.dataset.data[context.dataIndex];
                                var size = context.chart.width;
                                var base = Math.abs(value.v) / 100;
                                return (size / 24) * base;
                            }
                        }
                    }
                };               
                
                i= 0;
                bubbleData.data.forEach(function(bitem){
                    bubbleDataset.push({
                        label : bubbleData.label[i],                           
                        data : [bubbleData.data[i]]
                    });
                    i++;
                });
                
               
                
                var plotData = {
                    labels : 'ATM Data',
                    datasets : bubbleDataset
                };                   
                
                 console.log(plotData);
                
                new Chart($("#bubble"), {
                    type : 'bubble',
                    data : plotData,
                    options: options
                });
        
              },
              dataType: 'json'
            });
        };
        
        updateBubbleChart();
        
      });  
        
        
      
