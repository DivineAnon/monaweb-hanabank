    script.
      $(document).ready(function(){   

        function getRandomColor() {
            var letters = '0123456789ABCDEF'.split('');
            var color = '#';
            for (var i = 0; i < 6; i++ ) {
                color += letters[Math.floor(Math.random() * 16)];
            }
            return color;
        }      
        var barChart;
        //--------------------------------------------------------
        $.ajax({
          url: '/monaweb/summary_detail_chart?switch=#{qswitch}',
          success: function(data){
            var barData = {
                label: [],
                data: []            
            };
            var barDataRC = [];
            i = 0;        
            //populate RC list array
            data.rows.forEach( function(item){
                if(item[2]!='')
                {
                  if( barDataRC.indexOf(item[2]) < 0 )
                  { 
                      barDataRC.push(item[2]);
                      barData.data.push([]);
                  }
                }
            });
            arl = barDataRC.length;
            data.rows.forEach( function(item){
                if( barData.label.indexOf(item[0]) < 0 )
                {
                    if( i > 0 )
                    {
                        barData.data.forEach( function(bdf){
                            if( bdf.length < i )
                            {
                                bdf.push(NaN);
                            }
                        });
                    }                    
                    barData.label.push(item[0]);                
                    i++;
                }
                barData.data[barDataRC.indexOf(item[2])].push(item[3]);            
            });
            
            var plotDataDatasets = [];
            i = 0;
            barData.data.forEach( function(itm){
                plotDataDatasets.push({
                    label : barDataRC[i],                    
                    borderWidth: 1,                
                    data : barData.data[i],
                    backgroundColor: getRandomColor(),
                    borderColor: getRandomColor()
                });
                i++;
            });
            
            var plotData = {
                labels : barData.label,
                datasets : plotDataDatasets
            };
            barChart = new Chart($("#bar"),{
                type : 'bar',
                data : plotData,               
                options: {  
                    title: {
                        text: "#{qswitch}", 
                        display: true
                    },
                    legend: {
                        display: true,
                        labels: {
                            filter: function(a, b){
                                return a.text != null
                            }
                        }
                    },
                    scales: {
                        xAxes: [{
                            labelString: "Time",
                            display: true,
                            ticks: {                               
                                callback: function(value, index, values) {
                                    return value + ':00';
                                }
                            }
                        }],
                        yAxes: [{
                            ticks: {
                                beginAtZero:true
                            }
                        }]
                    } 
                }
            }); 
          }
        });
      });
    
    
